# Clinic-AI Environment Configuration
# Copy this file to .env and update the values

# Application Settings
APP_NAME=Clinic-AI
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=true
PORT=8000
HOST=0.0.0.0

# Database Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=clinicai
MONGO_COLLECTION=clinicAi

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Security Configuration
SECURITY_SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_CREDENTIALS=true
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]

# Logging Configuration
LOGGING_LEVEL=INFO
LOGGING_FORMAT=json

# Step-03: Audio Transcription & SOAP Generation
# Whisper Configuration
WHISPER_MODEL=base
WHISPER_LANGUAGE=en
WHISPER_MEDICAL_CONTEXT=true

# Audio File Configuration
AUDIO_MAX_SIZE_MB=50
AUDIO_ALLOWED_FORMATS=["mp3", "wav", "m4a", "flac", "ogg"]
AUDIO_TEMP_DIR=/tmp/clinicai_audio

# SOAP Generation Configuration
SOAP_MODEL=gpt-4
SOAP_MAX_TOKENS=2000
SOAP_TEMPERATURE=0.3
SOAP_INCLUDE_HIGHLIGHTS=true
SOAP_INCLUDE_RED_FLAGS=true

# File Storage Configuration
FILE_STORAGE_TYPE=local
FILE_STORAGE_PATH=./storage
FILE_CLEANUP_AFTER_HOURS=24

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Monitoring & Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
LOG_LEVEL=INFO

# Development/Testing
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_OPENAPI_JSON=true
