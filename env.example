# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGO_DB_NAME=clinicai

# Application Settings
APP_ENV=production
DEBUG=false
PORT=8000
HOST=0.0.0.0

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# Security Configuration
SECURITY_SECRET_KEY=your_secret_key_here
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
ENCRYPTION_KEY=your_encryption_key_here

# CORS Configuration
CORS_ALLOWED_ORIGINS=["https://your-frontend-domain.com"]
CORS_ALLOWED_METHODS=["GET","POST","PUT","DELETE","OPTIONS","PATCH"]
CORS_ALLOWED_HEADERS=["*"]
CORS_ALLOW_CREDENTIALS=false

# File Storage Configuration
FILE_STORAGE_TYPE=local
FILE_STORAGE_PATH=/tmp/clinicai
FILE_AUDIO_STORAGE_PATH=/tmp/clinicai/audio
FILE_CLEANUP_AFTER_HOURS=24
FILE_SAVE_AUDIO_FILES=false

# Audio Configuration
AUDIO_MAX_SIZE_MB=10
AUDIO_ALLOWED_FORMATS=["mp3","wav","m4a"]
AUDIO_TEMP_DIR=/tmp/clinicai_audio

# Whisper Configuration
WHISPER_MODEL=base
WHISPER_LANGUAGE=en
WHISPER_MEDICAL_CONTEXT=true
TRANSCRIPTION_SERVICE=local

# SOAP Configuration
SOAP_MODEL=gpt-4o-mini
SOAP_MAX_TOKENS=4000
SOAP_TEMPERATURE=0.3
SOAP_INCLUDE_HIGHLIGHTS=true
SOAP_INCLUDE_RED_FLAGS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
